<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.multipleviewinsingleactivity_android__mvvm.viewmodel.NavigationViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Layout 1 -->
        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{viewModel.currentLayout == @id/layout1 ? View.VISIBLE : View.GONE}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Layout 1"
                android:textSize="24sp"
                android:layout_centerInParent="true" />

            <!-- Next Button -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_above="@id/buttonBack1"
                android:onClick="@{() -> viewModel.switchToLayout(@id/layout2)}"
                android:visibility="@{viewModel.currentLayout == @id/layout1 ? View.VISIBLE : View.GONE}" />


            <!-- Back Button -->
            <Button
                android:id="@+id/buttonBack1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp"
                android:onClick="@{() -> viewModel.popAndSwitchLayout()}" />
        </RelativeLayout>

        <!-- Layout 2 -->
        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{viewModel.currentLayout == @id/layout2 ? View.VISIBLE : View.GONE}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Layout 2"
                android:textSize="24sp"
                android:layout_centerInParent="true" />

            <!-- Next Button -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_below="@id/buttonBack2"
                android:onClick="@{() -> viewModel.switchToLayout(@id/layout3)}"
                android:visibility="@{viewModel.currentLayout == @id/layout2 ? View.VISIBLE : View.GONE}" />

            <!-- Back Button -->
            <Button
                android:id="@+id/buttonBack2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp"
                android:onClick="@{() -> viewModel.popAndSwitchLayout()}" />
        </RelativeLayout>

        <!-- Layout 3 -->
        <RelativeLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{viewModel.currentLayout == @id/layout3 ? View.VISIBLE : View.GONE}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Layout 3"
                android:textSize="24sp"
                android:layout_centerInParent="true" />

            <!-- Next Button -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_below="@id/buttonBack3"
                android:onClick="@{() -> viewModel.switchToLayout(@id/layout1)}"
                android:visibility="@{viewModel.currentLayout == @id/layout3 ? View.VISIBLE : View.GONE}" />

            <!-- Back Button -->
            <Button
                android:id="@+id/buttonBack3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp"
                android:onClick="@{() -> viewModel.popAndSwitchLayout()}" />
        </RelativeLayout>
    </LinearLayout>
</layout>
